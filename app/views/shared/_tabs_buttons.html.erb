<div class="container is-widescreen"> 	
	<div class="columns">
		<div class="column">
			<div class="tabs is-centered">
			  <ul>
	  	    <% if is_representative? %>
	  		    <li id='fifth-tab' class="tab is-active">
	  		    	<a>
	  		    		<span class="icon is-small"><i class="fas fa-tasks"></i></span>
	  		    		<span>Tasks (<%= tasks_count.to_s %>)</span>
	  		    	</a>
	  		    </li>
	  		  <% end %>

			    <li id='first-tab' class="tab <%= is_admin? ? 'is-active' : '' %>">
			    	<a>
			    		<span class="icon is-small"><i class="far fa-chart-bar"></i></span>
			    		<span><%= is_admin? ? 'Insights' : 'Operations (' + operations_count.to_s + ')' %></span>
			    	</a>
			    </li>

			    <li id='second-tab' class="tab">
			    	<a>
			    		<span class="icon is-small"><i class="fas fa-user-plus"></i></span>
			    		<span>Register <%= role_to_register.capitalize %></span>
			    	</a>
			    </li>

			    <% if is_representative? %>
				    <li id='fourth-tab' class="tab">
				    	<a>
				    		<span class="icon is-small"><i class="fas fa-user-plus"></i></span>
				    		<span>Register Shipper</span>
				    	</a>
				    </li>
				  <% end %>

			    <li id='third-tab' class="tab">
			    	<a>
			    		<span class="icon is-small"><i class="fas fa-cogs"></i></span>
			    		<span>Options</span>
			    	</a>
			    </li>
			  </ul>
			</div>
		</div>
	</div>
</div>