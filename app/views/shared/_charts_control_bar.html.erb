<div class="search-container">
  <div class="columns">

    <%= form_tag path, class: 'field is-horizontal column is-12' do %>

    	<div class="column">
    		<h1 class="title white-font">
    		  Time Period
    		</h1>

    		<ul>
    		  <li>
    		    <%= button_tag type: "submit", class: "link-button", name: "day" do %>
    		      <span id='newest-tag' class="tag is-rounded inline-tag <%= is_active_date_range? ('day') %>"><i class="far fa-calendar-alt tag-icon"></i> By Day</span>
    		    <% end %>
    		    <%= button_tag type: "submit", class: "link-button", name: "week" do %>
    		      <span id='oldest-tag' class="tag is-rounded <%= is_active_date_range? ('week') %>"> <i class="far fa-calendar-alt tag-icon"></i> By Week</span>
    		    <% end %>
    		  </li>
    		  <br>
    		  <li>
    		    <%= button_tag type: "submit", class: "link-button", name: "month" do %>
    		      <span id='more-progress-tag' class="tag is-rounded inline-tag <%= is_active_date_range? ('month') %>"><i class="far fa-calendar-alt tag-icon"></i> By Month </span>
    		    <% end %>
    		    <%= button_tag type: "submit", class: "link-button", name: "year" do %>
    		      <span id='less-progress-tag' class="tag is-rounded <%= is_active_date_range? ('year') %>"><i class="far fa-calendar-alt tag-icon"></i> By Year </span>
    		    <% end %>
    		  </li>
    		</ul>
    	</div>
	   

      <div class="column">
        <h1 class="title white-font">
          Filter By Type
        </h1>
        <div class="select">
        	<%= select_tag :modality, options_for_select([ "ALL", "FCL - EXW" ], modality_content ), { onchange: 'this.form.submit();' } %>
        </div>
      </div>

      <div class="column">
        <h1 class="title white-font">
          Search
        </h1>
        <div class="field has-addons">
          <div class="control">
          	<%= text_field_tag :search, search_content, class: "input", placeholder: "Agent or Shipper" %>
          </div>
          <div class="control">
          	<%= button_tag type: "submit", class: "button is-dark" do %>
          	  <i class="fas fa-search"></i>
          	<% end %>
          </div>
        </div>
	    </div>
  	<% end %>
  </div>
</div>