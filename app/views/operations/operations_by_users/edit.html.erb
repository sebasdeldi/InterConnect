<div class="container is-widescreen"> 

	<div class="columns">
	  <div class="column is-10 is-offset-1">
	    <br>
	    <br>
	    <nav class="breadcrumb" aria-label="breadcrumbs">
	      <ul>
	        <li class='operations-redirection'><%= link_to "Operation #{@operation.reference}", operation_path(@operation.id) %></li>
	        <li class="is-active"><%= link_to "Edit Operation", '' %></li>
	      </ul>
	    </nav>

	    <div class="notification is-primary">
	      Fields marked with an <strong>asterisk (*)</strong> are mandatory, please be sure to fill them in before proceeding.
	    </div>

	    <nav class= 'panel is-form-panel card-shadow'>
	      <p class="panel-heading">
	        Update operation <%= @operation.reference %>
	      </p>
	      <%= render 'form', action_path: @op_by_user, agents: agents(current_user), representatives: all_representatives, shippers: shippers(current_user), consignees: all_consignees, errors: @errors, action_type: 'patch' %>
	    </nav>
	   
	  </div>
	</div>
</div>