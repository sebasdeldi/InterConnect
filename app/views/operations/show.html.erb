
<% if is_representative? || is_admin? || is_leader? %>
	<div class="container">
		<br>
		<br>
		<nav class="breadcrumb" aria-label="breadcrumbs">
		  <ul>
		  	<% if is_admin? %>
		  		<li class='operations-redirection' ><%= link_to "Operation Records List", general_records_path %></li>
		  	<% elsif is_leader? %>
		  		<li class='operations-redirection' ><%= link_to "Main Page", authenticated_root_path %></li>
		  	<% elsif is_representative? %>
		  		<li class='operations-redirection' ><%= link_to "Operation Records List", representative_path %></li>
		  	<% end %>

		    <li class="is-active"><%= link_to "Operation " + @operation.reference, operation_path(@operation.id) %></li>
		  </ul>

		  <div class="field">
		    <div class="control has-icons-left">
		      <div class="select sli">
		        <select class="sli difficulty" >
		          <option disabled>SLI</option>
		          <% if @sli.nil? || @sli.files.empty? %>
			          <option value="slis/<%= params[:id] %>.pdf">
		          	  See Document
			          </option>
			        <% else %>
  		          <option value="<%= @sli.files.first.url %>">
  	          	  See Document
  		          </option>
			        <% end %>
		          <option value="slis/new/<%= Operation.find(params[:id]).secure_id %>">
		          	Request Document
		          </option>
		        </select>
		      </div>
		      <div class="icon is-small is-left">
		      	<i class="fas fa-file-pdf"></i>
		      </div>
		    </div>
		  </div>




		  <%= link_to booking_sheet_path(@operation.id, format: 'pdf'), target: "_blank", class: "button booking-sheet-btn " do %>
		  	<i class="fas fa-file-pdf"></i>
		  	<span class="margin-left">Booking Sheet</span>
		  <% end %>
		  <b class="diff-label">Difficulty:</b>
		  <%= form_tag change_difficulty_path, class: 'button-icon' do %>
			  <div class="select">
			    <%= select_tag "difficulty", options_for_select([['EASY', 'EASY'], ['MEDIUM','MEDIUM'], ['HARD','HARD']], @operation.difficulty), { onchange: 'this.form.submit();', class: "difficulty" } %>
			  </div>
		  	<%= hidden_field_tag 'operation_id', params[:id] %>
		  <% end %>
		</nav>
	</div>
	<br>
	<%= render 'timeline', operation_secure_id: @operation_secure_id, operation_id: @operation.id, agent: @agent, shipper: @shipper, tasks: @tasks, cargo_info_tasks: @cargo_info_tasks, booking_info_tasks: @booking_info_tasks, info_confirmed_tasks: @info_confirmed_tasks, info_requested_tasks: @info_requested_tasks, quotation_confirmed_tasks: @quotation_confirmed_tasks, request_booking_tasks: @request_booking_tasks, carriers: @carriers, consignee: @consignee, fcl_exw_container_loading_tasks: @fcl_exw_container_loading_tasks,
	 fcl_exw_container_delivery_tasks: @fcl_exw_container_delivery_tasks %>
<% elsif is_agent? %>
<% end %>

