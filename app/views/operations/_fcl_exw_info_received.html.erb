	<div class="timeline-content right <%= is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed-no-bg-right' : '' %>">
		<h2 class="<%= is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed' : '' %>">CONFIRM SHIPPER INFORMATION RESPONSE</h2>
		<br>
		<p>
			<center>
				<i class="far fa-check-circle timeline-card-icon <%= is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed-icon' : '' %>""></i>
			</center>

			Please confirm that you have received the cargo information from your cargo agent
			<b><%= agent.company_name %></b> and the shipper <b><%= shipper.company_name %></b>
			<br>
			<br>
			<article class="message is-warning">
			  <div class="message-header">
			  	<p>
			  		<i class="fas fa-exclamation-triangle"></i>  Warning
			  	</p>
			  </div>
			  <div class="message-body">
			    We will send you reminders about this step via <b>email</b> every <b>24 hours</b> until you confirm that you have received the cargo information.
			  </div>
			</article>

			<%= form_tag ("/fcl_exw_confirm_info") do %>
				<%= hidden_field_tag 'shipper_id', shipper.id %>
				<%= hidden_field_tag 'operation_id', operation_id %>
				<%= hidden_field_tag 'agent_id', agent.id %>
				<%= submit_tag 'CONFIRM', class: "button is-link #{is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed' : ''  } " , disabled: is_fcl_exw_info_confirmed?(operation_id)  %>
			<% end %>

	</div>
