<div class="modal fcl-info-received">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">CONFIRM SHIPPER INFORMATION RESPONSE</p>
      <button class="delete close-modal fcl-info-received" aria-label="close"></button>
    </header>

    <section class="modal-card-body">
    	<div class=''>
  			<div id="">
  				<div class="timeline-item" id="fcl_exw_info_received">
  					<div class="timeline-content right <%= is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed-no-bg-right' : '' %>">
  						<p>
  							<center>
  								<i class="far fa-file-alt timeline-card-icon <%= is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed-icon' : '' %>""></i>
  							</center>

  							Please confirm that you have received the cargo information from your destination agent
  							<b><%= agent.company_name %></b> and the shipper <b><%= shipper.company_name %></b>
  							<br>
  							<br>
  							<article class="message is-warning">
  							  <div class="message-header">
  							  	<p>
  							  		<i class="fas fa-exclamation-triangle"></i>  Warning
  							  	</p>
  							  </div>
  							  <div class="message-body">
  							    We will send you reminders about this step via <b>email</b> every <b>24 hours</b> until you confirm that you have received the cargo information.
  							  </div>
  							</article>

  						  <% if !info_confirmed_tasks.empty? %>
  					    	<article class="message is-primary">
  					    	  <div class="message-header">
  					    	    <p><b><%= info_confirmed_tasks.count %> Tasks for this step</b></p>
  					    	  </div>
  					    	  <div class="message-body">
  					    	  	<% info_confirmed_tasks.each do |task|%>
  							  	    <%= link_to task_path(task.id), class: "panel-block is-active" do %>
  						  	  	    <span class="panel-icon">
  						  	  	      <i class="fas fa-book" aria-hidden="true"></i>
  						  	  	    </span>
  						  	  	    <p>
  						  	  	    	<%= task.note.truncate 45 %> || due: 
  						  	  	    	<b><%= task.due_date %></b>
  						  	  	    </p>
  						  	  	  <% end %>
  						  	  	<% end %>
  					    	  </div>
  					    	</article>
  				    	<% end %>
  							    	
  							<%= form_tag ("/fcl_exw_confirm_info") do %>
  								<%= hidden_field_tag 'shipper_id', shipper.id %>
  								<%= hidden_field_tag 'operation_id', operation_id %>
  								<%= hidden_field_tag 'agent_id', agent.id %>
  								<%= submit_tag 'CONFIRM', class: "button is-link #{is_fcl_exw_info_confirmed?(operation_id) ? 'step-completed' : ''  } " , disabled: is_fcl_exw_info_confirmed?(operation_id)  %>
  								<a class="button is-primary right-button circle-button show-modal info_confirmed">
  									<i class="fas fa-tasks"></i>
  								</a>
  							<% end %>
  						</p>
  					</div>
  				</div>
  			</div>
    	</div>
     	<br>
    </section>
  </div>
</div>