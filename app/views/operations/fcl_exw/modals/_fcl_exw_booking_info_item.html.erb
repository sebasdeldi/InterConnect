<div class="modal fcl-booking-info">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">BOOKING INFORMATION</p>
      <button class="delete close-modal fcl-booking-info" aria-label="close"></button>
    </header>

    <section class="modal-card-body">
    	<div class="timeline-item" id="fcl_exw_info_timeline_item">
    		<div class="timeline-content <%= is_fcl_exw_booking_info_completed?(operation_secure_id) ? 'step-completed-no-bg' : '' %> <%= is_fcl_exw_booking_info_completed?(operation_secure_id) == 'orange' ? 'step-incompleted-no-bg' : '' %>">
    			
    			<br>
    			<p>
    				<center>
    					<i class="fas fa-file-medical timeline-card-icon <%= is_fcl_exw_booking_info_completed?(operation_secure_id) == 'orange' ? 'step-incompleted-icon' : '' %> <%= is_fcl_exw_booking_info_completed?(operation_secure_id) ? 'step-completed-icon' : '' %>""></i>
    				</center>
    				<br>
    				Please load to the system the information related to the booking previously issued.
    				<br>
    				<br>
    				<article class="message is-warning">
    				  <div class="message-header">
    				    <p><i class="fas fa-exclamation-triangle"> </i>   Warning</p>
    				  </div>
    				  <div class="message-body">
    				  	the information will be sent to your agent, <b><%= agent.company_name %></b> everytime a change is made. 
    				  </div>
    				</article>


    			  <% if !booking_info_tasks.empty? %>
    		    	<article class="message is-primary">
    		    	  <div class="message-header">
    		    	    <p><b><%= booking_info_tasks.count %> Tasks for this step</b></p>
    		    	  </div>
    		    	  <div class="message-body">
    		    	  	<% booking_info_tasks.each do |task|%>
    				  	    <%= link_to task_path(task.id), class: "panel-block is-active" do %>
    			  	  	    <span class="panel-icon">
    			  	  	      <i class="fas fa-book" aria-hidden="true"></i>
    			  	  	    </span>
    			  	  	    <p>
    			  	  	    	<%= task.note.truncate 45 %> || due: 
    			  	  	    	<b><%= task.due_date %></b>
    			  	  	    </p>
    			  	  	  <% end %>
    			  	  	<% end %>
    		    	  </div>
    		    	</article>
    	    	<% end %>
    			</p>
    		  <% if is_fcl_exw_booking_info_completed?(operation_secure_id) == 'orange' %>
    		  	<%= link_to is_fcl_exw_booking_info_completed?(operation_secure_id) ? 'UPDATE INFO' : 'FILL IN INFO', new_fcl_exw_steps_booking_info_path(operation_secure_id: operation_secure_id), class: 'button step-incompleted'  %>
    		  <% else %>
    		  	<%= link_to is_fcl_exw_booking_info_completed?(operation_secure_id) ? 'UPDATE INFO' : 'FILL IN INFO', new_fcl_exw_steps_booking_info_path(operation_secure_id: operation_secure_id), class: is_fcl_exw_booking_info_completed?(operation_secure_id) ? 'button step-completed' : 'button is-link'  %>
    		  <% end %>
    			
    			<a class="button is-primary right-button circle-button show-modal fcl_exw_booking_info">
    				<i class="fas fa-tasks"></i>
    			</a>
    		</div>
    	</div>

     	<br>
    </section>
  </div>
</div>





















