<div class="modal fcl-booking">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">
        REQUEST LFS ORDER
      </p>
      <button class="delete close-modal fcl-booking" aria-label="close"></button>
    </header>

    <section class="modal-card-body">
    	<div class=''>
  			<div id="">
  				<div class="timeline-item" id="fcl_exw_request_booking_timeline_item">
  					<div class="timeline-content right <%= is_lcl_booking_requested?(operation_id) ? 'step-completed-no-bg-right' : '' %>">
  						
  						<p>
  							<center>
  								<i class="fas fa-truck timeline-card-icon <%= is_lcl_booking_requested?(operation_id) ? 'step-completed-icon' : '' %>""></i>
  							</center>

  						  <% if !request_booking_tasks.empty? %>
  					    	<article class="message is-primary">
  					    	  <div class="message-header">
  					    	    <p><b><%= request_booking_tasks.count %> Tasks for this step</b></p>
  					    	  </div>
  					    	  <div class="message-body">
  					    	  	<% request_booking_tasks.each do |task|%>
  							  	    <%= link_to generals_task_path(task.id), class: "panel-block is-active" do %>
  						  	  	    <span class="panel-icon">
  						  	  	      <i class="fas fa-book" aria-hidden="true"></i>
  						  	  	    </span>
  						  	  	    <p>
  						  	  	    	<%= task.note.truncate 45 %> || due: 
  						  	  	    	<b><%= task.due_date %></b>
  						  	  	    </p>
  						  	  	  <% end %>
  						  	  	<% end %>
  					    	  </div>
  					    	</article>
  				    	<% end %>
  							 
  							<p>
  								You will be redirected to LFS's website where you should make the booking for this operation.
  							</p>
  							<br>
  							<%= form_tag ("/lcl_steps/request_booking") do %>
                  <br>
  						    <br>
  								<%= hidden_field_tag 'shipper_id', shipper.id %>
  								<%= hidden_field_tag 'operation_id', operation_id %>
  								<%= hidden_field_tag 'agent_id', agent.id %>
                  <%= hidden_field_tag 'website', 'https://lfs.shipprimus.com/RatingApplet.php', class: 'hidden-website' %>


                  <%= submit_tag 'REQUEST', class: "request wrlcl button is-link #{is_lcl_booking_requested?(operation_id) ? 'step-completed' : ''  } "  %>
                  <%= submit_tag 'NOTIFY AGENT', class: "button is-link #{is_lcl_booking_requested?(operation_id) ? 'step-completed' : ''  } "  %>
  								<a class="button is-primary right-button circle-button show-modal request_booking">
  									<i class="fas fa-tasks"></i>
  								</a>
  							<% end %>
  						</p>
  					</div>
  				</div>
  			</div>
    	</div>
     	<br>
    </section>
  </div>
</div>






























