<%= render 'tasks/tasks_control_bar', operations_by_repre: operations_by_repre, task_subject: task_subject %>


<nav class="panel">
  <% @tasks.each do |task| %>
    <%= link_to task_path(task.id), class: 'panel-block is-active' do  %>
      <span class="panel-icon">
        <i class="fas fa-book" aria-hidden="true"></i>
      </span>
      <p>
        Task for: <b><%= operation(task.operation_id).reference %></b> ---- <span class="blue"> <%= task.note.truncate(180) %> </span> ---- <i class="fas fa-calendar-alt"></i> <%= task.due_date %></b></p>
      </p>
    <% end %>
  <% end %>
</nav>
