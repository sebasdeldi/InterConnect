<%= form_for :task, url: {controller:'tasks', action: action}, html: { class: 'task-form' } do |f| %>
  <div class="field">
    <%= f.label :note, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.text_area :note, autofocus: true, autocomplete: "note", class: "input note" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :due_date, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.text_field :due_date, autofocus: true, class: 'input due_datetime' %>
      <span class="icon is-small is-left">
        <i class="far fa-calendar-alt"></i>
      </span>
    </div>
  </div>
  <br>
  <% if controller_name == 'tasks' %>
	  <div class="field">
	  	<label class="checkbox">
	  	  <%= f.check_box :status %>
	  	  Mark as completed
	  	</label>
	  </div>
	  <br>
	<% end %>	
  <%= f.hidden_field :operation_id, value: operation_id %>
  <%= f.hidden_field :id, value: id %>

  <%= f.submit "SAVE", class: 'button is-link' %>
<% end %>